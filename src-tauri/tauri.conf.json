{
  "build": {
    "beforeDevCommand": "bun run dev",
    "beforeBuildCommand": "bun run build",
    "devPath": "http://localhost:1420",
    "distDir": "../dist"
  },
  "package": {
    "productName": "dxup",
    "version": "0.0.1"
  },
  "tauri": {
    "allowlist": {
      "all": false,
      "path": {
        "all": true
      },
      "dialog": {
        "all": false,
        "ask": false,
        "confirm": false,
        "message": false,
        "open": true,
        "save": false
      },
      "fs": {
        "all": false,
        "readFile": true,
        "writeFile": true,
        "exists": true,
        "scope": ["$HOME/.profile"]
      },
      "shell": {
        "all": false,
        "execute": true,
        "open": true,
        "scope": [
          {
            "name": "asdf",
            "cmd": "asdf",
            "args": true
          },
          {
            "name": "pwd",
            "cmd": "pwd"
          },
          {
            "name": "git",
            "cmd": "git",
            "args": true
          },
          {
            "name": "curl",
            "cmd": "curl",
            "args": ["--help"]
          }
        ]
      }
    },
    "windows": [
      {
        "title": "dxup",
        "width": 800,
        "height": 600,
        "titleBarStyle": "Transparent"
      }
    ],
    "security": {
      "csp": null
    },
    "bundle": {
      "active": true,
      "targets": ["app", "deb", "updater", "dmg"],
      "identifier": "uk.sharath.dxup",
      "icon": ["icons/dxup.png", "icons/dxup.icns", "icons/dxup.ico"]
    }
  }
}
